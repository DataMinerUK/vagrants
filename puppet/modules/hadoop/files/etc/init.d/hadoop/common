#!/bin/bash

service_command() {
  case "$1" in
    start)
      # Stop first if already running
      pkill -f $PID "$3"
      sleep 1

      service $2 start
    ;;

    stop)
      pkill -f $PID "$3"
      sleep 1
    ;;

    status)
      pgrep -f "$3" > /dev/null
      exit $?
    ;;

    *)
    ;;
  esac
}